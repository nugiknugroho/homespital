<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundAll"
    tools:context=".DetailActivityMenu.Ambulance.PesanAmbulance">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Pesan Ambulance"
        app:titleTextColor="@color/colorNew"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
    </android.support.v7.widget.Toolbar>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:background="@color/colorNew"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_image_ambulance"
                android:layout_width="65dp"
                android:layout_height="65dp"
                android:layout_gravity="center"
                android:layout_margin="5dp"
                android:src="@drawable/warnaambulance"/>

            <TextView
                android:id="@+id/tv_noplat"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="Nomor Kendaraan Ambulance"
                android:textStyle="bold"
                android:textColor="@color/colorFontBaru"/>
            <TextView
                android:id="@+id/tv_alamatklinikambulance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_margin="2dp"
                android:text="Nama Klinik"
                android:textColor="@color/colorFontBaru"/>
            <TextView
                android:id="@+id/tv_kota_klinikambulance"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:gravity="center"
                android:layout_marginTop="2dp"
                android:layout_marginBottom="5dp"
                android:text="Alamat Klinik"
                android:textColor="@color/colorFontBaru"/>

        </LinearLayout>
    </android.support.v7.widget.CardView>

    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        app:cardCornerRadius="5dp"
        app:cardElevation="5dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="5dp"
            android:orientation="vertical"
            android:background="@color/colorNew">

            <TextView
                android:layout_marginTop="5dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Form Pemesanan Ambulance"
                android:textStyle="bold"
                android:textColor="@color/colorFontBaru"
                android:gravity="center"/>

            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:layout_margin="5dp"
                android:background="@color/colorHint"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Alamat Rumah Anda :"
                android:textStyle="bold"
                android:textColor="@color/colorFontBaru"/>

            <EditText
                android:id="@+id/edt_alamat_pelanggan"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:hint="Jalan, RT, RW, No. Rumah, Kelurahan, Kecamatan, Kota / Kabupaten"
                android:textColorHint="@color/colorHint"
                android:textColor="@color/colorFontBaru"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="5dp"
                android:layout_marginStart="5dp"
                android:text="Tujuan Rumah Sakit :"
                android:textStyle="bold"
                android:textColor="@color/colorFontBaru"/>

            <TextView
                android:id="@+id/tv_tujuanKlinik"
                android:inputType="text"
                android:layout_width="match_parent"
                android:layout_marginTop="5dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginEnd="5dp"
                android:text="Alamat Rumah Sakit"
                android:textColor="@color/colorFontBaru"/>

            <Button
                android:id="@+id/btn_pesan_ambulance"
                android:layout_marginStart="50dp"
                android:layout_marginEnd="50dp"
                android:layout_marginTop="20dp"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@drawable/btn_register_background"
                android:text="KONFIRMASI PEMESANAN"/>

        </LinearLayout>

    </android.support.v7.widget.CardView>

    <android.support.design.widget.CoordinatorLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <android.support.design.widget.FloatingActionButton
            android:id="@+id/float_home"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:backgroundTint="@color/colorMagenta"
            android:layout_gravity="end|bottom"
            android:layout_marginRight="10dp"
            android:layout_marginBottom="25dp"
            android:src="@drawable/ic_home_black_24dp" />
    </android.support.design.widget.CoordinatorLayout>


</LinearLayout>