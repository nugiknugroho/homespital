<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <android.support.v7.widget.CardView
        android:id="@+id/cv_layanan_perawat"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:background="@drawable/ripple"
            android:padding="5dp">

            <ImageView
                android:id="@+id/iv_image_perawat"
                android:layout_width="68dp"
                android:layout_height="68dp"
                android:layout_margin="5dp"
                android:src="@drawable/warnaperawat"/>

            <LinearLayout
                android:layout_margin="1dp"
                android:padding="10dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/iv_image_perawat">

                <TextView
                    android:id="@+id/textViewNamaPerawat"
                    android:text="NAMA PERAWAT"
                    android:textStyle="bold"
                    android:textSize="15sp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

                <TextView
                    android:id="@+id/textViewAlamat"
                    android:text="Alamat"
                    android:textSize="13sp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

                <TextView
                    android:id="@+id/textViewHarga"
                    android:text="Harga"
                    android:textSize="13sp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

            </LinearLayout>

            <Button
                android:id="@+id/textViewStatus"
                android:layout_width="wrap_content"
                android:layout_height="30dp"
                android:layout_alignBottom="@+id/iv_image_perawat"
                android:layout_alignParentEnd="true"
                android:background="@drawable/bg_status"
                android:gravity="center"
                android:text="Status Ketersediaan"
                android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"
                android:textColor="@color/colorFontBaru"
                android:textSize="15sp" />

        </RelativeLayout>
    </android.support.v7.widget.CardView>

</LinearLayout>