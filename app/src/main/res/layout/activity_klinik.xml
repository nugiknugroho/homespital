<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundAll"
    tools:context=".DetailActivityMenu.Klinik.KlinikActivity">

    <android.support.v7.widget.Toolbar
        android:id="@+id/toolbar"
        app:title="Klinik"
        app:titleTextColor="@color/colorNew"
        android:elevation="2dp"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:background="@color/colorPrimary"
        >
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp"
            android:layout_marginTop="5dp">

            <android.support.v7.widget.CardView
                android:id="@+id/cv_klinik"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:background="@color/colorNew"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_image_dokter"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/warnaklinik"/>

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_image_dokter">

                        <TextView
                            android:text="OPSI PENCARIAN KLINIK 1"
                            android:textSize="18sp"
                            android:textColor="@color/colorFontBaru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

                        <TextView
                            android:text="Alamat Klinik"
                            android:textSize="12sp"
                            android:textColor="@color/colorFontBaru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
                        <TextView
                            android:text="Jarak Tempuh"
                            android:textSize="12sp"
                            android:textColor="@color/colorFontBaru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>
            <android.support.v7.widget.CardView
                android:id="@+id/cv_klinik1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="5dp"
                app:cardCornerRadius="5dp">

                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="88dp"
                    android:background="@color/colorNew"
                    android:padding="5dp">

                    <ImageView
                        android:id="@+id/iv_image_ambulance"
                        android:layout_width="68dp"
                        android:layout_height="68dp"
                        android:layout_margin="5dp"
                        android:src="@drawable/warnaklinik"/>

                    <LinearLayout
                        android:layout_margin="5dp"
                        android:padding="5dp"
                        android:orientation="vertical"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_toRightOf="@id/iv_image_ambulance">

                        <TextView
                            android:text="OPSI PENCARIAN KLINIK 2"
                            android:textSize="18sp"
                            android:textColor="@color/colorFontBaru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>

                        <TextView
                            android:text="Alamat Klinik"
                            android:textSize="12sp"
                            android:textColor="@color/colorFontBaru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
                        <TextView
                            android:text="Jarak Tempuh"
                            android:textSize="12sp"
                            android:textColor="@color/colorFontBaru"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:textAppearance="@style/Base.TextAppearance.AppCompat.Large"/>
                    </LinearLayout>
                </RelativeLayout>
            </android.support.v7.widget.CardView>


        </LinearLayout>
    </ScrollView>

</LinearLayout>