<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorNew">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:layout_width="40dp"
            android:layout_marginStart="100dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_astri_baru"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="Homespital"
            android:textSize="20dp"
            android:fontFamily="@string/font_family_medium"
            android:textColor="@color/colorNew"/>
    </android.support.v7.widget.Toolbar>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="25dp"
        >

        <LinearLayout
            android:layout_marginTop="15dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginBottom="25dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="FITUR FITUR HOMESPITAL"
                android:textColor="@color/colorFontBaru"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="25dp"
                android:text="Lihatlah fitur-fitur di aplikasi Homespital ini, gunakan layanan ini dengan baik"
                android:textColor="@color/colorFontBaru"
                />

            <LinearLayout
                android:id="@+id/lin_dokter"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_item"
                android:padding="12dp"
                android:orientation="horizontal"
                android:onClick="lin_dokter"
                >

                <ImageView
                    android:src="@drawable/doctor"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_dokter"
                        android:paddingLeft="10dp"
                        android:text="DOKTER"
                        android:textSize="18sp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        />

                    <TextView
                        android:paddingLeft="10sp"
                        android:text="Tanya jawab langsung dengan dokter umum dan spesialis terpercaya"
                        android:textSize="12dp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_bidan"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_item"
                android:padding="12dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:src="@drawable/nadib"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingLeft="10dp"
                        android:text="BIDAN"
                        android:textSize="18sp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="10sp"
                        android:text="Pelayanan kesehatan bersama bidan di rumah Anda"
                        android:textSize="12dp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/lin_nurse"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_item"
                android:padding="12dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:src="@drawable/nurse"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingLeft="10dp"
                        android:text="PERAWAT"
                        android:textSize="18sp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="10sp"
                        android:text="Pelayanan kesehatan bersama perawat di rumah Anda"
                        android:textSize="12dp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_item"
                android:padding="12dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:src="@drawable/ambul"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingLeft="10dp"
                        android:text="AMBULANCE"
                        android:textSize="18sp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="10sp"
                        android:text="Pelayanan informasi ketersediaan ambulance"
                        android:textSize="12dp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="10dp"
                android:layout_marginBottom="5dp"
                android:layout_width="match_parent"
                android:layout_height="88dp"
                android:layout_marginRight="20dp"
                android:layout_marginLeft="20dp"
                android:background="@drawable/bg_item"
                android:padding="12dp"
                android:orientation="horizontal"
                >

                <ImageView
                    android:src="@drawable/clinic"
                    android:layout_width="68dp"
                    android:layout_height="68dp"
                    />
                <LinearLayout
                    android:layout_marginTop="5dp"
                    android:orientation="vertical"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:paddingLeft="10dp"
                        android:text="KLINIK"
                        android:textSize="18sp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:paddingLeft="10sp"
                        android:text="Pelayanan informasi Klinik terdekat"
                        android:textSize="12dp"
                        android:textColor="@color/colorFontBaru"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                </LinearLayout>

            </LinearLayout>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="Artikel Informasi Kesehatan Terbaru"
                android:textColor="@color/colorFontBaru"
                android:textStyle="bold"
                android:layout_marginLeft="25dp"/>

            <HorizontalScrollView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp">

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="30dp">

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_item"
                        >

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/doctor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_item"
                        >

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/doctor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_item"
                        >

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/doctor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_item"
                        >

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/doctor" />
                    </LinearLayout>

                    <LinearLayout
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginTop="10dp"
                        android:layout_marginBottom="5dp"
                        android:layout_marginRight="20dp"
                        android:layout_marginLeft="20dp"
                        android:background="@drawable/bg_item"
                        >

                        <ImageView
                            android:layout_width="150dp"
                            android:layout_height="150dp"
                            android:src="@drawable/doctor" />
                    </LinearLayout>


                </LinearLayout>
                
            </HorizontalScrollView>

        </LinearLayout>

    </ScrollView>

</LinearLayout>