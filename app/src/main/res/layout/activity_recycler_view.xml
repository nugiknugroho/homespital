<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorNew"
    tools:context=".RecyclerView">


        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_item"
            android:padding="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/dokter"
                android:layout_width="68dp"
                android:layout_height="68dp"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="10dp"
                    android:text="DOKTER"
                    android:textSize="18sp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingLeft="10sp"
                    android:text="Tanya jawab langsung dengan dokter umum dan spesialis terpercaya"
                    android:textSize="12dp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_item"
            android:padding="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/bidan"
                android:layout_width="68dp"
                android:layout_height="68dp"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="10dp"
                    android:text="BIDAN"
                    android:textSize="18sp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingLeft="10sp"
                    android:text="Pelayanan kesehatan bersama bidan di rumah Anda"
                    android:textSize="12dp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_item"
            android:padding="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/perawat"
                android:layout_width="68dp"
                android:layout_height="68dp"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="10dp"
                    android:text="PERAWAT"
                    android:textSize="18sp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingLeft="10sp"
                    android:text="Pewawatan di rumah Anda"
                    android:textSize="12dp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_item"
            android:padding="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/ambulance"
                android:layout_width="68dp"
                android:layout_height="68dp"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="10dp"
                    android:text="AMBULANCE"
                    android:textSize="18sp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingLeft="10sp"
                    android:text="Pelayanan informasi ketersediaan ambulance"
                    android:textSize="12dp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

        <LinearLayout
            android:layout_marginTop="10dp"
            android:layout_marginBottom="5dp"
            android:layout_width="match_parent"
            android:layout_height="88dp"
            android:layout_marginRight="20dp"
            android:layout_marginLeft="20dp"
            android:background="@drawable/bg_item"
            android:padding="12dp"
            android:orientation="horizontal"
            >

            <ImageView
                android:src="@drawable/klinik"
                android:layout_width="68dp"
                android:layout_height="68dp"
                />
            <LinearLayout
                android:layout_marginTop="5dp"
                android:orientation="vertical"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">

                <TextView
                    android:paddingLeft="10dp"
                    android:text="KLINIK"
                    android:textSize="18sp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

                <TextView
                    android:paddingLeft="10sp"
                    android:text="Pelayanan informasi Klinik Terdekat"
                    android:textSize="12dp"
                    android:textColor="@color/colorFontBaru"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />

            </LinearLayout>

        </LinearLayout>

</LinearLayout>