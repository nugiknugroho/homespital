<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/colorBackgroundAll">

    <android.support.v7.widget.Toolbar
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/colorPrimary"
        android:minHeight="?attr/actionBarSize">

        <ImageView
            android:layout_width="40dp"
            android:layout_marginStart="100dp"
            android:layout_height="40dp"
            android:src="@drawable/logo_astri_baru"
            />

        <TextView
            android:layout_width="150dp"
            android:layout_marginLeft="10dp"
            android:layout_height="wrap_content"
            android:text="PROFIL"
            android:textSize="20dp"
            android:fontFamily="@string/font_family_medium"
            android:textColor="@color/colorNew"/>
    </android.support.v7.widget.Toolbar>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="150dp"
        android:background="@color/colorPrimaryDark"
        android:padding="12dp"
        android:gravity="center"
        android:orientation="vertical"
        >
        <ImageView
            android:id="@+id/iv_foto_profil"
            android:layout_marginTop="15dp"
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/template_fotoprofil"/>

    </LinearLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginBottom="50dp">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical"
            android:layout_marginBottom="25dp">

            <android.support.v7.widget.CardView
                android:layout_margin="10dp"
                android:padding="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_account"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="BASIC DETAIL*"
                        android:textColor="@color/colorMagenta"
                        android:textStyle="bold"/>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorHint"
                        />
                    <TextView
                        android:id="@+id/edt_nama_lengkap"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama Lengkap"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_namaLengkap"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_account_circle_black_24dp"
                        android:drawablePadding="5dp"
                        android:text="Nama Anda"
                        android:textColor="@color/colorFontBaru"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Tanggal Lahir"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_tglLahir"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_date_range_black_24dp"
                        android:drawablePadding="5dp"
                        android:text="01-01-10001"
                        android:textColor="@color/colorFontBaru"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Jenis Kelamin"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_gender"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_gender"
                        android:drawablePadding="5dp"
                        android:hint="Jenis Kelamin"
                        android:textColorHint="@color/colorFontBaru"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:padding="10dp"
                card_view:cardCornerRadius="5dp"
                card_view:cardElevation="5dp">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:background="@drawable/bg_account"
                    android:padding="10dp"
                    android:orientation="vertical"
                    >

                    <TextView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="CONTACT DETAIL*"
                        android:textColor="@color/colorMagenta"
                        android:textStyle="bold"/>
                    <View
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="1dp"
                        android:background="@color/colorHint"
                        />
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Email"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_mail_outline_black_24dp"
                        android:drawablePadding="5dp"
                        android:hint="Email Anda"
                        android:textColorHint="@color/colorFontBaru"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Nama User"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_username"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_account_circle_black_24dp"
                        android:drawablePadding="5dp"
                        android:hint="Nama User Anda"
                        android:textColorHint="@color/colorFontBaru"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Password"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_password"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_lock_outline_black_24dp"
                        android:drawablePadding="5dp"
                        android:hint="*****************"
                        android:textColorHint="@color/colorFontBaru"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Kota Asal"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_kotaAsal"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_location_on_black_24dp"
                        android:drawablePadding="5dp"
                        android:hint="Kota Asal Anda"
                        android:textColorHint="@color/colorFontBaru"/>
                    <TextView
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:text="Alamat Lengkap"
                        android:textColor="@color/colorHint"
                        android:textStyle="bold"
                        />
                    <TextView
                        android:id="@+id/tv_alamatLengkap"
                        android:layout_marginTop="5dp"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:drawableStart="@drawable/ic_location_city_black_24dp"
                        android:drawablePadding="5dp"
                        android:hint="Alamat Lengkap Anda"
                        android:textColorHint="@color/colorFontBaru"/>
                </LinearLayout>

            </android.support.v7.widget.CardView>

            <Button
                android:id="@+id/btn_logout"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:background="@drawable/bg_account"
                android:text="LOGOUT"
                android:textColor="@color/colorFontBaru"/>

        </LinearLayout>
    </ScrollView>



</LinearLayout>